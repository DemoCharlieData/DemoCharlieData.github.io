{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    
    "title": {
      "text": "A tale of three cities",
      "subtitle":"New daily Covid cases by UK city. Source: Gov.uk API",
      "subtitleFontStyle":"italic",
      "subtitleFontSize":10,
      "anchor": "start",
      "color": "black"
    },
    
     "data": {
      "url": "https://raw.githubusercontent.com/DemoCharlieData/DemoCharlieData.github.io/main/Demo_CovidData.csv"},
  
     "transform":[
        
        {"filter": {
          "field": "areaName", 
          "oneOf": ["Bolton", "Westminster", "Bristol, City of"]}
          }
  
  
      ],
    
    
    "height": 300,
    "width": 310,
     
    "mark": {"type": "bar", "point": false},
   
    "encoding": {
  
      "x": {
        "field": "date",
        "type": "temporal",
        "title": null,
        "axis": {"grid": false}
      },
  
      "y": {
        "field": "newCasesBySpecimenDate",
        "type": "quantitative",
        "title": null,
        "axis": {"grid": false}
      },
  
      "color": {
        "field": "areaName",
        "type": "nominal",
        "scale": {"scheme": "set1"},
        "title": "Area",
        "legend": {
          "orient": "top-left", 
          "fillColor": "#FcFdFd"}
      }
  }
  }
